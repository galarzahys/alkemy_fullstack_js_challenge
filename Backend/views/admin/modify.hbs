<div class="row">
    <div class="col-6 offset-3">
        <h4>Modificar una novedad</h4>
        <form action="/admin/balance/modify" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{operation.id}}" name="id">
               <div class="mb-3">
                   <label for="">Concept</label>
                   <input type="text" class="form-control" placeholder="Concept" name="concept" value="{{operation.concept}}">
               </div>
                <div class="mb-3">
                    <label for="">Amount</label>
                    <input type="number" step="any" class="form-control" value={{operation.amount}} name="amount">
                </div>
                <div class="mb-3">
                    <label for="">Date - {{operation.date}}</label>
                    <input type="date" class="form-control" placeholder="{{operation.date}}" name="date" value="{{operation.date}}">
                </div>
                
                      
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>
</div>