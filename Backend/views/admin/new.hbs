<div class="row">
    <div class="col-6 offset-3">
        <h4>New data</h4>
        <form action="/admin/balance/new" method="post" enctype="multipart/form-data">
               <div class="mb-3">
                   <input type="text" class="form-control" placeholder="Concept" name="concept">
               </div>
                
                <div class="mb-3">
                   <input type="number" value="" step="any" class="form-control" placeholder="Amount" name="amount">
                </div>
                <div class="mb-3">
                   <input type="date" class="form-control" placeholder="Date" name="date">
                </div>
                <div class="mb-3">
                    <select name="type">
                        <option>Profits</option>
                        <option>Expense</option>
                    </select>
     
                </div>
                      
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>
</div>